{% extends 'base.html.twig' %}

{% block title %}Ajouter un Poste{% endblock %}

{% block body %}
<main class="main-content mt-0">
  <div class="page-header align-items-start min-vh-100" 
       style="background-image: url('https://images.unsplash.com/photo-1521791136064-7986c2920216?auto=format&fit=crop&w=1950&q=80');">
    <span class="mask bg-gradient-dark opacity-6"></span>
    <div class="container my-auto">
      <div class="row">
        <div class="col-lg-6 col-md-8 col-12 mx-auto">
          <div class="card z-index-0 fadeIn3 fadeInBottom">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-dark shadow-dark border-radius-lg py-3">
                <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">
                  Ajouter un Poste
                </h4>
              </div>
            </div>
            <div class="card-body">
              {{ form_start(form) }}
                <div class="input-group input-group-outline my-3">
                  {{ form_label(form.nom_P, null, {'label_attr': {'class': 'form-label'}}) }}
                  {{ form_widget(form.nom_P, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="input-group input-group-outline my-3">
                  {{ form_label(form.Code_P, null, {'label_attr': {'class': 'form-label'}}) }}
                  {{ form_widget(form.Code_P, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="input-group input-group-outline my-3">
                  {{ form_label(form.poste_e, 'Affecté à l’effectif', {'label_attr': {'class': 'form-label'}}) }}
                  {{ form_widget(form.poste_e, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="text-center">
                  <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">
                    Enregistrer
                  </button>
                </div>
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
{% endblock %}
