{% extends 'base.html.twig' %}

{% block title %}Ajouter une Ressource Humaine{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
  <style>
    /* Même styles que dans ton template Matériel */
    .page-header {
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      position: relative;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem 1rem;
    }

    .page-header .mask {
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.6);
      z-index: 0;
    }

    .card {
      position: relative;
      z-index: 1;
      border-radius: 0.75rem;
      box-shadow: 0 10px 25px rgba(0,0,0,0.3);
      background-color: rgba(255, 255, 255, 0.95);
      padding: 2rem;
    }

    h4 {
      font-weight: 700;
      color: #212529;
    }

    .form-control, .form-select {
      border: 1.5px solid #ced4da;
      border-radius: 0.5rem;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
      font-size: 1rem;
      padding: 0.5rem 1rem;
      background-color: #fff;
      color: #212529;
      box-shadow: none;
    }

    .form-control::placeholder {
      color: #adb5bd;
    }

    .form-control:hover, 
    .form-select:hover,
    .form-control:focus, 
    .form-select:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 8px rgba(13, 110, 253, 0.3);
      outline: none;
      background-color: #fff;
      color: #212529;
    }

    /* Select2 overrides */
    .select2-container--default .select2-selection--single {
      height: 45px;
      padding: 6px 12px;
      border-radius: 0.5rem;
      border: 1.5px solid #ced4da;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
      font-size: 1rem;
    }
    .select2-container--default.select2-container--focus .select2-selection--single {
      border-color: #0d6efd;
      box-shadow: 0 0 8px rgba(13, 110, 253, 0.3);
      outline: none;
    }
    .select2-results__option img {
      width: 40px;
      height: 40px;
      object-fit: cover;
      border-radius: 0.5rem;
      margin-right: 8px;
      vertical-align: middle;
    }
    .select2-results__option img:hover {
      transform: scale(1.1);
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
      transition: transform 0.2s ease;
    }
    .select2-selection__rendered img {
      width: 40px;
      height: 40px;
      object-fit: cover;
      border-radius: 0.5rem;
      margin-right: 8px;
      vertical-align: middle;
    }

    button.btn-dark {
      background-color: #0d6efd;
      border-color: #0d6efd;
      font-weight: 600;
      font-size: 1.1rem;
      border-radius: 0.5rem;
      padding: 0.6rem 1.2rem;
      transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }
    button.btn-dark:hover {
      background-color: #0b5ed7;
      box-shadow: 0 0 15px rgba(13, 110, 253, 0.5);
    }
  </style>
{% endblock %}

{% block body %}
<aside class="sidenav navbar navbar-vertical navbar-expand-xs border-radius-lg fixed-start ms-2 bg-white my-2" id="sidenav-main">
  <div class="sidenav-header">
    <a class="navbar-brand px-4 py-3 m-0" href="{{ path('app_homes') }}">
      <img src="{{ asset('assets/img/logo-ct-dark.png') }}" class="navbar-brand-img" width="26" height="26" alt="main_logo">
      <span class="ms-1 text-sm text-dark">Admin Panel</span>
    </a>
  </div>
  <hr class="horizontal dark mt-0 mb-2">
  <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link text-dark d-flex align-items-center" href="{{ path('app_homes') }}">
          <i class="material-symbols-rounded opacity-5 me-2">home</i>
          <span class="nav-link-text ms-1">Accueil</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-dark" href="{{ path('list_effectifs') }}">
          <i class="material-symbols-rounded opacity-5 me-2">groups</i>
          <span class="nav-link-text ms-1">Effectifs</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link d-flex align-items-center bg-gradient-success text-white rounded-3 shadow-sm py-2 px-3" href="{{ path('list_app') }}">
          <i class="material-symbols-rounded opacity-5 me-2">people</i>
          <span class="nav-link-text ms-1">Ressources Humaines</span>
        </a>
      </li>
    </ul>
  </div>
</aside>

<main class="main-content mt-0">
  <div class="page-header" 
       style="background-image: url('https://media.istockphoto.com/id/1448246714/vector/abstract-polygonal-space-triangles-with-connecting-dots-and-lines-background-concept-for.jpg');">
    <span class="mask"></span>

    <div class="container my-auto">
      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-12">
          <div class="card">
            <h4 class="text-center mb-4">Ajouter une Ressource Humaine</h4>

            {{ form_start(form) }}

            <div class="mb-3">
              {{ form_label(form.code, 'Code', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(form.code, {'attr': {'class': 'form-control', 'placeholder': 'Ex: RH-001'}}) }}
              {{ form_errors(form.code) }}
            </div>

            <div class="mb-4">
              {{ form_label(form.id_ref, 'Admin associé', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(form.id_ref, {
                'attr': {
                  'class': 'form-select',
                  'id': 'ressource_id_ref',
                  'style': 'width: 100%;'
                }
              }) }}
              {{ form_errors(form.id_ref) }}
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-dark w-100 mt-3">Enregistrer</button>
            </div>

            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
  <script>
    function formatState(state) {
      if (!state.id) {
        return state.text;
      }
      var imgSrc = $(state.element).data('image');
      if (imgSrc) {
        var $state = $('<span><img src="' + imgSrc + '" alt="' + state.text + '" /> ' + state.text + '</span>');
        return $state;
      }
      return state.text;
    }

    $(document).ready(function() {
      $('#ressource_id_ref').select2({
        templateResult: formatState,
        templateSelection: formatState,
        minimumResultsForSearch: -1 // désactive la recherche
      });
    });
  </script>
{% endblock %}
