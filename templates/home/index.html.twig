<script>
document.addEventListener('DOMContentLoaded', function () {

    // ====== CHART.JS ======
    const ctx = document.getElementById('chart-line-tasks').getContext('2d');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: {{ labels|raw }},
            datasets: [{
                label: 'Nombre d‚Äôeffectifs',
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                data: {{ data|raw }},
                fill: false,
                tension: 0.3,
                pointRadius: 5,
                pointHoverRadius: 7,
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'top' } },
            scales: {
                y: { beginAtZero: true, grid: { display: true } }
            }
        }
    });

    // ====== LEAFLET MAP ======
    const map = L.map('map').setView([33.8869, 9.5375], 7);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '¬© OpenStreetMap'
    }).addTo(map);

    const customIcon = L.icon({
        iconUrl: 'https://media.licdn.com/dms/image/v2/C4D0BAQHJvltomSlPPA/company-logo_200_200/company-logo_200_200/0/1630573461373/tunisie_t_l_com_logo?e=2147483647&v=beta&t=HfxaWFJykXku5U2Q0NB0lFPlmsTSH70fNxK6KacOMe4',
        iconSize: [32, 32],
        iconAnchor: [16, 32],
        popupAnchor: [0, -32]
    });

    const markers = [];

    {% for eff in effectif %}
        {% if eff.localisation is not empty %}
            {% set parts = eff.localisation|split(',') %}
            {% if parts|length == 2 %}
                {% set lat = parts[0]|trim %}
                {% set lng = parts[1]|trim %}
                {% if lat is not empty and lng is not empty %}
                    // Ajouter le marqueur pour cet effectif
                    markers.push(
                        L.marker([{{ lat }}, {{ lng }}], { icon: customIcon }).addTo(map)
                            .bindPopup("<b>{{ eff.nom }} {{ eff.prenom }}</b><br>Localisation: {{ eff.localisation }}<br>Poste: {{ eff.poste|default('Inconnu') }}")
                    );
                {% endif %}
            {% endif %}
        {% endif %}
    {% endfor %}

    if (markers.length > 0) {
        const group = new L.featureGroup(markers);
        map.fitBounds(group.getBounds().pad(0.2));
    }

});
</script>


