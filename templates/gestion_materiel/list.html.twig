{% extends 'base.html.twig' %}

{% block title %}Liste des Matériels{% endblock %}

{% block body %}
<main class="main-content border-radius-lg">
  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card my-4">
          <div class="card-header p-0 mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3 d-flex justify-content-between">
              <h6 class="text-white ps-3">Liste des Matériels</h6>
              <a href="{{ path('app_gestion_materiel_add') }}" class="btn btn-sm btn-light me-3">
                <i class="material-symbols-rounded">add</i> Ajouter
              </a>
            </div>
          </div>
          <div class="card-body px-0 pb-2">
            <div class="table-responsive p-0">
              <table class="table align-items-center mb-0">
                <thead>
                  <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom du Matériel</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Code</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ressource associée</th>
                    <th class="text-secondary opacity-7">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {% for materiel in materiels %}
                    <tr>
                      <td>
                        <p class="text-sm font-weight-bold mb-0">{{ materiel.nomM }}</p>
                      </td>
                      <td>
                        <p class="text-sm text-secondary mb-0">{{ materiel.codeM }}</p>
                      </td>
                      <td>
                        {% if materiel.ressource %}
                          {{ materiel.ressource.image }} 
                        {% else %}
                          <span class="text-muted">Aucune ressource</span>
                        {% endif %}
                      </td>
                      <td class="align-middle">
                        <a href="{{ path('app_gestion_materiel_edit', {id: materiel.id}) }}" 
                           class="text-secondary font-weight-bold text-xs me-2">
                          <i class="material-symbols-rounded">edit</i>
                        </a>
                        <a href="{{ path('app_gestion_materiel_delete', {id: materiel.id}) }}" 
                           class="text-danger font-weight-bold text-xs"
                           onclick="return confirm('Supprimer ce matériel ?');">
                          <i class="material-symbols-rounded">delete</i>
                        </a>
                      </td>
                    </tr>
                  {% else %}
                    <tr>
                      <td colspan="4" class="text-center py-4">Aucun matériel trouvé</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
{% endblock %}
