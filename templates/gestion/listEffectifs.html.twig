{% extends 'base.html.twig' %}

{% block title %}Liste des Effectifs{% endblock %}

{% block body %}
<aside class="sidenav navbar navbar-vertical navbar-expand-xs border-radius-lg fixed-start ms-2 bg-white my-2" id="sidenav-main">
  <div class="sidenav-header">
    <a class="navbar-brand px-4 py-3 m-0" href="{{ path('app_homes') }}">
      <img src="{{ asset('assets/img/logo-ct-dark.png') }}" class="navbar-brand-img" width="26" height="26" alt="main_logo">
      <span class="ms-1 text-sm text-dark">Admin Panel</span>
    </a>
  </div>
  <hr class="horizontal dark mt-0 mb-2">
  <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link text-dark d-flex align-items-center" href="{{ path('app_homes') }}">
          <i class="material-symbols-rounded opacity-5 me-2">home</i>
          <span class="nav-link-text ms-1">Accueil</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-dark" href="{{ path('app_list') }}">
          <i class="material-symbols-rounded opacity-5">table_view</i>
          <span class="nav-link-text ms-1">Administrateurs</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active bg-gradient-dark text-white" href="{{ path('list_effectifs') }}">
          <i class="material-symbols-rounded opacity-5">groups</i>
          <span class="nav-link-text ms-1">Effectifs</span>
        </a>
      </li>
    </ul>
  </div>
  <div class="sidenav-footer position-absolute w-100 bottom-0">
    <div class="mx-3">
      <a class="btn bg-gradient-dark w-100" href="{{ path('add_effectifs') }}">
        <i class="material-symbols-rounded me-1">add</i> Nouvel Effectif
      </a>
    </div>
  </div>
</aside>

<main class="main-content border-radius-lg">
  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card my-4">
          <div class="card-header p-0 mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3 d-flex justify-content-between">
              <h6 class="text-white ps-3">Liste des Effectifs</h6>
              <a href="{{ path('add_effectifs') }}" class="btn btn-sm btn-light me-3">
                <i class="material-symbols-rounded">add</i> Ajouter
              </a>
            </div>
          </div>
          <div class="card-body px-0 pb-2">
            <div class="table-responsive p-0">
              <table class="table align-items-center mb-0">
                <thead>
                  <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Prénom</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Poste</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Téléphone</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">N° CIN</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">PHOTO</th>
                    <th class="text-secondary opacity-7">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {% for effectif in effectifs %}
                    <tr>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{ effectif.nom }}</p>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{ effectif.prenom }}</p>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{ effectif.poste }}</p>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{ effectif.email }}</p>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{ effectif.telephone }}</p>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{ effectif.numCin }}</p>
                     <td>
  {% if effectif.imageEffect %}
    <img src="{{ asset('uploads/effectifs/' ~ effectif.imageEffect) }}" alt="Photo" style="width: 50px; height: auto; border-radius: 5px;">
  {% else %}
    <span class="text-secondary">-</span>
  {% endif %}
</td>
                      <td class="text-center">
                        {# Affiche le code RH s'il existe #}
                        {% if effectif.idRef %}
                          <span class="text-secondary text-xs font-weight-bold">{{ effectif.idRef.code }}</span>
                        {% else %}
                          <span class="text-secondary text-xs font-weight-bold">-</span>
                        {% endif %}
                      </td>
                      <td class="align-middle">
                        <a href="#" class="text-secondary font-weight-bold text-xs me-2">
                          <i class="material-symbols-rounded">edit</i>
                        </a>
                        <a href="#" class="text-danger font-weight-bold text-xs"
                           onclick="return confirm('Supprimer cet effectif ?');">
                          <i class="material-symbols-rounded">delete</i>
                        </a>
                      </td>
                    </tr>
                  {% else %}
                    <tr>
                      <td colspan="8" class="text-center py-4">Aucun effectif trouvé</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
          <script>
          
        </div>
      </div>
    </div>
  </div>
</main>
{% endblock %}
